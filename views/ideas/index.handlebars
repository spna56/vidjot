
{{#each ideas}}
<div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <p>{{date}}</p>
    <a class="btn btn-dark btn-block mb-2" href="/ideas/{{id}}/edit">Edit</a>
    <form action="/ideas/{{id}}?_method=DELETE" method="POST">
       <button class="btn btn-danger btn-block">Delete</button>
    </form>
</div>

{{else}}
<p>No videos listed</p>
{{/each}}